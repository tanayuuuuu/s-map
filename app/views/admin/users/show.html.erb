<div class="container">
  <h2>ユーザー詳細</h2>
    <div class="row">
        <div class="col-md-4">ユーザーID</div>
        <div class="col-md-8"><%= @user.id %></div>
    </div>
   <div class="row">
        <div class="col-md-4">氏名</div>
        <div class="col-md-8"><%= @user.name %></div>
    </div>
    <div class="row">
        <div class="col-md-4">フリガナ</div>
        <div class="col-md-8"><%= @user.name_kana %></div>
    </div>
    <div class="row">
        <div class="col-md-4">メールアドレス</div>
        <div class="col-md-8"><%= @user.email %></div>
    </div>
    <div class="row">
        <div class="col-md-4">郵便番号</div>
        <div class="col-md-8"><%= @user.post_code %></div>
    </div>
     <div class="row">
        <div class="col-md-4">住所</div>
        <div class="col-md-8"><%= @user.address %></div>
    </div>
     <div class="row">
        <div class="col-md-4">電話番号</div>
        <div class="col-md-8"><%= @user.phone_number %></div>
    </div>
    <div class="link-button">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success" %></td>
      <%= link_to "一覧画面に戻る", admin_users_path, class:"btn btn-warning" %></td>
    </div>
</div>
