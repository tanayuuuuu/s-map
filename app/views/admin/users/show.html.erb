<div class="container">
  <h2>ユーザー詳細</h2>
    <div class="row">
        <div class="col-md-4 font-weight-bold">ユーザーID</div>
        <div class="col-md-8"><%= @user.id %></div>
    </div>
   <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">氏名</div>
        <div class="col-md-8"><%= @user.name %></div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">フリガナ</div>
        <div class="col-md-8"><%= @user.name_kana %></div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">メールアドレス</div>
        <div class="col-md-8"><%= @user.email %></div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">郵便番号</div>
        <div class="col-md-8"><%= @user.post_code %></div>
    </div>
     <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">住所</div>
        <div class="col-md-8"><%= @user.address %></div>
    </div>
     <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">電話番号</div>
        <div class="col-md-8"><%= @user.phone_number %></div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4 font-weight-bold">会員ステータス</div>
        <div class="col-md-8">
            <% if @user.is_deleted? == true %>
                <%= "退会しています" %>
            <% else @user.is_deleted? == false %>
                <%= "有効" %>
            <% end %>

        </div>
    </div>
    <div class="link-button mt-3">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success" %></td>
      <%= link_to "一覧画面に戻る", admin_users_path, class:"btn btn-warning ml-5" %></td>
    </div>
</div>
