<div class="container">
  <div class="row">
    <div class="col-md-8 mt-2">
      <h1>ユーザー編集</h1>
      <%= form_with model: @user, url: admin_user_path(@user) do |f| %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
      <br/>
      <%= f.label :name_kana, "フリガナ" %>
      <%= f.text_field :name_kana %>
      <br/>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
      <br/>
      <%= f.label :post_code, "郵便番号" %>
      <%= f.text_field :post_code %>
      <br/>
      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>
      <br/>
      <%= f.label :phone_number, "電話番号" %>
      <%= f.text_field :phone_number %>
      <%= f.submit "変更", class:"btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
