<div class="container">
  <h3>コメント一覧</h3>
    <h6><%= @post.place_name %>についてのコメント</h6>
      <% @comments.each.with_index(1) do |comment, i| %>
        <div class="row mt-2">
          <div class="col-md-12 font-weight-bold">
            No.<%= i %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= comment.comment_contents %>
          </div>
        </div>
        <% if current_user.id == comment.user.id %>
        <div class="row">
          <div class="col-md-6"><%= link_to "削除", user_post_comment_path(comment.user.id, comment.post.id, comment.id), method: :delete,class:"btn btn-danger" %></div>
          <div class="col-md-6"><%= link_to "戻る", user_post_path(@post.user, @post), class:"btn btn-success" %></div>
        <% end %>
        </div>
      <% end %>
        <div class="pagination">
          <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
        </div>
</div>
