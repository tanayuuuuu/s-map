<div class="container">
  <h3>マイページ</h3>
  <div class="row mt-3">
      <div class="col-md-4">氏名</div>
      <div class="col-md-8"><%= current_user.name %></div>
  </div>
  <div class="row mt-2">
      <div class="col-md-4">フリガナ</div>
      <div class="col-md-8"><%= current_user.name_kana %></div>
  </div>
  <div class="row mt-2">
      <div class="col-md-4">メールアドレス</div>
      <div class="col-md-8"><%= current_user.email %></div>
  </div>
   <div class="row mt-2">
      <div class="col-md-4">郵便番号</div>
      <div class="col-md-8"><%= current_user.post_code %></div>
  </div>
    <div class="row mt-2">
      <div class="col-md-4">住所</div>
      <div class="col-md-8"><%= current_user.address %></div>
    </div>
    <div class="row mt-2">
      <div class="col-md-4">電話番号</div>
      <div class="col-md-8"><%= current_user.phone_number %></div>
   </div>
  <div class="mt-4">
   <% if user_signed_in? && @user.id == current_user.id %>
     <%= link_to "編集する", edit_user_path(current_user), class: "btn btn-success" %>
     <%= link_to "退会する", users_quit_path, class: "btn btn-danger ml-5" %>
   <% end %>
  </div>
</div>

