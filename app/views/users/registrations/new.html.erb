<div class="container">
  <div class="row">
    <div class="col-md-12">
    <h2>新規登録</h2>

    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :氏名 %><br/>
        <%= f.text_field :name, autofocus: true, placeholder: "田中　太郎" %>
      </div>

      <div class="field">
        <%= f.label :フリガナ %><br/>
        <%= f.text_field :name_kana, placeholder: "タナカ　タロウ" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "abcdefg@gmail.com" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "123456" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認用 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "123456" %>
      </div>

      <div class="field">
        <%= f.label :郵便番号 %><br/>
        <%= f.text_field :post_code, placeholder: "100-0000" %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br/>
        <%= f.text_field :address, placeholder: "東京都中央区日本橋1-1-1" %>
      </div>

      <div class="field">
        <%= f.label :電話番号 %><br/>
        <%= f.text_field :phone_number, placeholder: "080-1111-2222" %>
      </div><br/>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>