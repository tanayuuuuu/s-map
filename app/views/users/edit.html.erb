<%= form_with model: @user, local: true do |f| %>
<div class="container">
  <div class="col-sm-6 mx-auto">
    <h4 class="text-center my-3">登録情報編集</h4>

    <div class = "row mb-2">
      <label class = "col-sm-4">氏名</label>
      <div class = "form-inline col-sm-8 px-0">
          <%= f.text_field :name, class: "form-control col-sm-5 col-md-offset-5" %>
      </div>
  　</div>
  　<div class = "row mb-2">
      <label class = "col-sm-4">フリガナ</label>
      <div class = "form-inline col-sm-8 px-0">
          <%= f.text_field :name_kana, class: "form-control col-sm-5 col-md-offset-5" %>
      </div>
    </div>
    <div class = "row mb-2">
      <label class = "col-sm-4">メールアドレス</label>
     <%= f.email_field :email, class: "form-control col-sm-8 col-md-offset-5" %>
    </div>
    <div class = "row mb-2">
      <label class = "col-sm-4">郵便番号</label>
      <%= f.text_field :post_code, class: "form-control col-sm-8 col-md-offset-5" %>
    </div>
    <div class = "row mb-2">
      <label class = "col-sm-4">住所</label>
      <%= f.text_field :address, class: "form-control col-sm-8 col-md-offset-5" %>
    </div>
    <div class = "row mb-2">
      <label class = "col-sm-4">電話番号</label>
      <%= f.text_field :phone_number, class: "form-control col-sm-8 col-md-offset-5" %>
    </div>
    <div class="text-center">
      <%= f.submit "編集内容を保存する", class: "btn btn-outline-primary mt-3 p-3" %>
      <%= link_to "戻る", users_path, class: "btn btn-outline-secondary mt-3 p-3" %>
    </div>

  </div>
</div>
<% end %>